<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvfilter"
            android:text="Filter: "
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Spinner
            android:id="@+id/spfilter"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingRight="@dimen/dp_20"
            android:background="@drawable/spinnerback"
            android:layout_width="@dimen/dp_200"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/btcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/create"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCurrentDate"
            android:text="2019-6-24"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#fd5f00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/btpremonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/sortleft"/>
        <ImageButton
            android:id="@+id/btnextmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/sortright"/>
    </RelativeLayout>

