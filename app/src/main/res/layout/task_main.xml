    <LinearLayout
        android:background="#000"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="1dp"
            android:background="#fff"
            android:text="周日"
            android:textStyle="bold"
