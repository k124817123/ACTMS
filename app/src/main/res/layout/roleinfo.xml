<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout

        android:id="@+id/roleinforl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/backim"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/backarrow"

            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:id="@+id/nametv"
            android:text="Name*"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="#FFFFFF"
            android:layout_below="@id/backim"/>
        <EditText
            android:id="@+id/nameed"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/nametv"/>
        <TextView
            android:id="@+id/descriptiontv"
            android:text="Description"

            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="#FFFFFF"
            android:layout_below="@id/nameed"/>
        <EditText
            android:id="@+id/descriptioned"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_below="@id/descriptiontv"/>
        <TextView
            android:id="@+id/scopetv"
            android:text="Scope"

            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="#FFFFFF"
            android:layout_below="@id/descriptioned"/>
        <ImageButton
            android:id="@+id/scopebt"
            android:background="@drawable/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="done"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/scopetv"
            android:layout_alignBottom="@id/scopetv"/>
        <HorizontalScrollView
            android:id="@+id/scopescroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scopebt"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/scopeList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="#F3EEEE"
                />
        </HorizontalScrollView>
        <TextView
            android:id="@+id/functionstv"
            android:text="Functions"

            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="#FFFFFF"
            android:layout_below="@id/scopescroll"/>
        <ImageButton
            android:id="@+id/functionsbt"
            android:background="@drawable/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="done"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/functionstv"
            android:layout_alignBottom="@id/functionstv"/>
        <HorizontalScrollView
            android:id="@+id/functionscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/functionsbt"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/functionList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="#F3EEEE" />
        </HorizontalScrollView>
        <ImageButton
            android:id="@+id/savebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:layout_below="@id/functionscroll"
            android:background="@drawable/save"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_40"/>

    </RelativeLayout>
</ScrollView>
